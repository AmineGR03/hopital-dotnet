@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmation de réinitialisation";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: calc(100vh - 300px);">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-4x text-success"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Email envoyé</h2>
                    <p class="text-muted mb-4">
                        Veuillez vérifier votre email pour réinitialiser votre mot de passe.
                    </p>
                    <a asp-page="./Login" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

