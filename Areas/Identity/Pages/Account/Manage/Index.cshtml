@page
@model IndexModel
@{
    ViewData["Title"] = "Mon profil";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="page-header fade-in">
    <div class="container-fluid">
        <h1 class="page-title"><i class="fas fa-user-circle me-2"></i>Mon profil</h1>
        <p class="page-subtitle mb-0">Gérer vos informations personnelles</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@Model.StatusMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row g-3">
                <!-- Informations personnelles -->
                <div class="col-md-6">
                    <div class="card fade-in h-100">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informations personnelles</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">Nom d'utilisateur</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" value="@Model.Username" readonly />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" value="@Model.Email" readonly />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold text-muted small">Rôle</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                    <input type="text" class="form-control" value="@Model.Role" readonly />
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.DoctorName))
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted small">Médecin associé</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user-doctor"></i></span>
                                        <input type="text" class="form-control" value="@Model.DoctorName" readonly />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="col-md-6">
                    <div class="card fade-in h-100">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions rapides</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-page="./ChangePassword" class="btn btn-outline-primary">
                                    <i class="fas fa-key me-2"></i>Changer le mot de passe
                                </a>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-home me-2"></i>Retour à l'accueil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistiques utilisateur -->
            @if (User.IsInRole("doctor"))
            {
                <div class="card fade-in mt-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Mes statistiques</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="stats-card primary">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-1 small text-uppercase">Mes patients</h6>
                                            <h3 class="mb-0 fw-bold">-</h3>
                                        </div>
                                        <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                            <i class="fas fa-user-injured"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stats-card warning">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-1 small text-uppercase">Rendez-vous</h6>
                                            <h3 class="mb-0 fw-bold">-</h3>
                                        </div>
                                        <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                                            <i class="fas fa-calendar-check"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stats-card danger">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="text-muted mb-1 small text-uppercase">Prescriptions</h6>
                                            <h3 class="mb-0 fw-bold">-</h3>
                                        </div>
                                        <div class="stats-icon bg-danger bg-opacity-10 text-danger">
                                            <i class="fas fa-prescription"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

