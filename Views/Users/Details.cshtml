@model gestion_hopital.Controllers.UserViewModel

@{
    ViewData["Title"] = "Détails de l'utilisateur";
}

<div class="page-header fade-in">
    <div class="container-fluid">
        <h1 class="page-title"><i class="fas fa-user-circle me-2"></i>Détails de l'utilisateur</h1>
        <p class="page-subtitle mb-0">Informations complètes de l'utilisateur</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card fade-in">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informations de l'utilisateur</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-envelope me-2"></i>Email
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.Email)</strong>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user me-2"></i>Nom d'utilisateur
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UserName)
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user-tag me-2"></i>Rôle
                        </dt>
                        <dd class="col-sm-8">
                            @{
                                var roleClass = Model.Role switch
                                {
                                    "admin" => "danger",
                                    "doctor" => "primary",
                                    "receptionist" => "info",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@roleClass">
                                <i class="fas fa-user-tag me-1"></i>@Html.DisplayFor(model => model.Role)
                            </span>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.DoctorName))
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-user-doctor me-2"></i>Médecin associé
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Html.DisplayFor(model => model.DoctorName)</span>
                            </dd>
                        }
                    </dl>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

