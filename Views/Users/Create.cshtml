@model gestion_hopital.Controllers.CreateUserViewModel

@{
    ViewData["Title"] = "Créer un utilisateur";
}

<div class="page-header fade-in">
    <div class="container-fluid">
        <h1 class="page-title"><i class="fas fa-user-plus me-2"></i>Créer un utilisateur</h1>
        <p class="page-subtitle mb-0">Créer un nouveau compte utilisateur</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card fade-in">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="utilisateur@hopital.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="fas fa-lock me-2"></i>Mot de passe
                            </label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                            <small class="form-text text-muted">Le mot de passe doit contenir au moins 6 caractères</small>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold">
                                <i class="fas fa-user-tag me-2"></i>Rôle
                            </label>
                            <select asp-for="Role" class="form-select" asp-items="ViewBag.Roles">
                                <option value="">Sélectionner un rôle...</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DoctorId" class="form-label fw-semibold">
                                <i class="fas fa-user-doctor me-2"></i>Médecin associé (optionnel)
                            </label>
                            <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.Doctors">
                                <option value="">Aucun médecin</option>
                            </select>
                            <small class="form-text text-muted">Sélectionnez un médecin si l'utilisateur est un docteur</small>
                            <span asp-validation-for="DoctorId" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer l'utilisateur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

