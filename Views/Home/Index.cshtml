@model gestion_hopital.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
}

@if (User.Identity!.IsAuthenticated)
{
    <div class="page-header fade-in">
        <div class="container-fluid">
            <h1 class="page-title">Tableau de bord</h1>
            <p class="page-subtitle mb-0">Bienvenue, @User.Identity.Name</p>
        </div>
    </div>

    <div class="container-fluid dashboard-container">
        <!-- Stats Cards Row -->
        <div class="row g-3 mb-3">
            @if (User.IsInRole("admin") || User.IsInRole("receptionist"))
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="stats-card primary fade-in">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <h6 class="text-muted mb-1 small text-uppercase">Médecins</h6>
                                <h3 class="mb-0 fw-bold">@Model.TotalDoctors</h3>
                            </div>
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                <i class="fas fa-user-doctor"></i>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                <div class="stats-card success fade-in">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-1 small text-uppercase">Patients</h6>
                            <h3 class="mb-0 fw-bold">@Model.TotalPatients</h3>
                        </div>
                        <div class="stats-icon bg-success bg-opacity-10 text-success">
                            <i class="fas fa-user-injured"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                <div class="stats-card warning fade-in">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="text-muted mb-1 small text-uppercase">Rendez-vous</h6>
                            <h3 class="mb-0 fw-bold">@Model.TotalAppointments</h3>
                        </div>
                        <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                    </div>
                </div>
            </div>

            @if (User.IsInRole("admin") || User.IsInRole("doctor"))
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="stats-card danger fade-in">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <h6 class="text-muted mb-1 small text-uppercase">Prescriptions</h6>
                                <h3 class="mb-0 fw-bold">@Model.TotalPrescriptions</h3>
                            </div>
                            <div class="stats-icon bg-danger bg-opacity-10 text-danger">
                                <i class="fas fa-prescription"></i>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Info Cards Row -->
        <div class="row g-3 mb-3">
            <div class="col-lg-6 col-md-6">
                <div class="card dashboard-info-card fade-in">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-calendar-day me-2"></i>Rendez-vous aujourd'hui</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h2 class="text-primary mb-1">@Model.TodayAppointments</h2>
                                <p class="text-muted small mb-0">Rendez-vous prévus pour aujourd'hui</p>
                            </div>
                            <div class="info-icon bg-primary bg-opacity-10 text-primary">
                                <i class="fas fa-calendar-day"></i>
                            </div>
                        </div>
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-primary btn-sm mt-3">
                            Voir les rendez-vous <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <div class="card dashboard-info-card fade-in">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Rendez-vous à venir</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h2 class="text-success mb-1">@Model.UpcomingAppointments</h2>
                                <p class="text-muted small mb-0">Rendez-vous planifiés</p>
                            </div>
                            <div class="info-icon bg-success bg-opacity-10 text-success">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                        </div>
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-success btn-sm mt-3">
                            Voir les rendez-vous <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-3">
            <div class="col-12">
                <div class="card dashboard-actions-card fade-in">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions rapides</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            @if (User.IsInRole("admin") || User.IsInRole("receptionist"))
                            {
                                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                                    <a asp-controller="Doctors" asp-action="Create" class="btn btn-primary w-100 quick-action-btn">
                                        <i class="fas fa-user-doctor me-2"></i>Nouveau médecin
                                    </a>
                                </div>
                            }
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                                <a asp-controller="Patients" asp-action="Create" class="btn btn-success w-100 quick-action-btn">
                                    <i class="fas fa-user-injured me-2"></i>Nouveau patient
                                </a>
                            </div>
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                                <a asp-controller="Appointments" asp-action="Create" class="btn btn-warning w-100 quick-action-btn">
                                    <i class="fas fa-calendar-plus me-2"></i>Nouveau rendez-vous
                                </a>
                            </div>
                            @if (User.IsInRole("admin") || User.IsInRole("doctor"))
                            {
                                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                                    <a asp-controller="Prescriptions" asp-action="Create" class="btn btn-danger w-100 quick-action-btn">
                                        <i class="fas fa-prescription me-2"></i>Nouvelle prescription
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="card fade-in">
                    <div class="card-body py-5">
                        <i class="fas fa-hospital fa-5x text-primary mb-4"></i>
                        <h1 class="display-4 mb-4">Bienvenue</h1>
                        <p class="lead mb-4">Système de gestion hospitalière</p>
                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
