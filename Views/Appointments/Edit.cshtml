@model gestion_hopital.Models.Appointment

@{
    ViewData["Title"] = "Modifier le rendez-vous";
}

<div class="page-header fade-in">
    <div class="container-fluid">
        <h1 class="page-title"><i class="fas fa-edit me-2"></i>Modifier le rendez-vous</h1>
        <p class="page-subtitle mb-0">Modifier les informations du rendez-vous</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card fade-in">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label fw-semibold">
                                <i class="fas fa-user-injured me-2"></i>Patient
                            </label>
                            <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId">
                                <option value="">Sélectionner un patient...</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        @if (!ViewData.ContainsKey("IsDoctor") || !(bool)ViewData["IsDoctor"]!)
                        {
                            <div class="mb-3">
                                <label asp-for="DoctorId" class="form-label fw-semibold">
                                    <i class="fas fa-user-doctor me-2"></i>Médecin
                                </label>
                                <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.DoctorId">
                                    <option value="">Sélectionner un médecin...</option>
                                </select>
                                <span asp-validation-for="DoctorId" class="text-danger"></span>
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="DateRdv" class="form-label fw-semibold">
                                <i class="fas fa-calendar-alt me-2"></i>Date et heure du rendez-vous
                            </label>
                            <input asp-for="DateRdv" type="datetime-local" class="form-control" />
                            <small class="form-text text-muted">Sélectionnez la date et l'heure du rendez-vous</small>
                            <span asp-validation-for="DateRdv" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Motif" class="form-label fw-semibold">
                                <i class="fas fa-file-alt me-2"></i>Motif
                            </label>
                            <textarea asp-for="Motif" class="form-control" rows="3" placeholder="Décrivez le motif du rendez-vous..."></textarea>
                            <span asp-validation-for="Motif" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="fas fa-info-circle me-2"></i>Statut
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="Planifié">Planifié</option>
                                <option value="Confirmé">Confirmé</option>
                                <option value="Terminé">Terminé</option>
                                <option value="Annulé">Annulé</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



