@model gestion_hopital.Models.Doctor

@{
    ViewData["Title"] = "Créer un médecin";
}

<div class="page-header">
    <div class="container-fluid">
        <h1 class="page-title"><i class="fas fa-user-plus me-2"></i>Créer un médecin</h1>
        <p class="page-subtitle">Ajouter un nouveau médecin à l'hôpital</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informations du médecin</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nom" class="form-label"></label>
                                <input asp-for="Nom" class="form-control" placeholder="Entrez le nom" />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Prenom" class="form-label"></label>
                                <input asp-for="Prenom" class="form-control" placeholder="Entrez le prénom" />
                                <span asp-validation-for="Prenom" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialite" class="form-label"></label>
                            <input asp-for="Specialite" class="form-control" placeholder="Ex: Cardiologie, Pédiatrie..." />
                            <span asp-validation-for="Specialite" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tel" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input asp-for="Tel" class="form-control" placeholder="0123456789" />
                            </div>
                            <span asp-validation-for="Tel" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adresse" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <input asp-for="Adresse" class="form-control" placeholder="Adresse complète" />
                            </div>
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
