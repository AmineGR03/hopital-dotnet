@model gestion_hopital.Models.Doctor

@{
    ViewData["Title"] = "Détails du médecin";
}

<div class="page-header">
    <div class="container-fluid">
        <h1 class="page-title"><i class="fas fa-user-doctor me-2"></i>Détails du médecin</h1>
        <p class="page-subtitle">@Model.NomComplet</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informations personnelles</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-user me-2"></i>Nom
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.Nom)</strong>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user me-2"></i>Prénom
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Prenom)
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-stethoscope me-2"></i>Spécialité
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Specialite)</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-phone me-2"></i>Téléphone
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Tel)
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-map-marker-alt me-2"></i>Adresse
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Adresse)
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.Appointments.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Rendez-vous (@Model.Appointments.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Patient</th>
                                        <th>Motif</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.DateRdv).Take(5))
                                    {
                                        <tr>
                                            <td>@appointment.DateRdv.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@appointment.Patient?.NomComplet</td>
                                            <td>@appointment.Motif</td>
                                            <td>
                                                <span class="badge bg-@(appointment.Status == "Terminé" ? "success" : appointment.Status == "Annulé" ? "danger" : "warning")">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Appointments.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <a asp-controller="Appointments" asp-action="Index" asp-route-doctorId="@Model.Id" class="btn btn-sm btn-outline-primary">
                                    Voir tous les rendez-vous
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistiques</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Rendez-vous totaux</small>
                        <h3 class="mb-0">@Model.Appointments.Count</h3>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Prescriptions</small>
                        <h3 class="mb-0">@Model.Prescriptions.Count</h3>
                    </div>
                    <div>
                        <small class="text-muted d-block">Patients</small>
                        <h3 class="mb-0">@Model.Patients.Count</h3>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
